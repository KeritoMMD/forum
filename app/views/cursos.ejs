                                        <a href="/alteraCurso?idUsuario=<%= usuario[0].idUsuario %>&idCurso=<%= cursos[i].idCurso %>" class="btn btn-primary mr-3 ml-3"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                        <a href="/curso/excluir?idUsuario=<%= usuario[0].idUsuario %>&idCurso=<%= cursos[i].idCurso %>" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                    

                                    <% } %>
                                </div>
                                
                            </li>
                        <% } %>
                    </ul>
                    
                </div>
            </div>

        </div>


    </div>


    <footer class="footer fixed-bottom text-light navbar-dark bg-primary">
        <div class="container mt-3">
            <div class="row">
                <div class="col-sm-8">

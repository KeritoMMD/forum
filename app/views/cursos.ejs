        <div class="row mt-5">
            <h1 class="display-5">Bem-vindo, <%= usuario[0].nome %>!</h1>
        </div>


    </div>

    <div class="container mt-5">
        <div class="row mt-5">

            <div class="col-1"></div>

            <div class="col-10">
                
                <% if(usuario[0].tipo == "Professor") { %>
                    <a href="/insereCurso?idUsuario=<%= usuario[0].idUsuario %>" class="btn btn-primary">Adicionar Curso</a>
                <% } %>

                <h3 class="display-5 mt-3"><i class="fa fa-graduation-cap" aria-hidden="true"></i> Cursos</h3>
                <hr>


                <div class="card">
                    <ul class="list-group list-group-flush d-flex">
                        <% for(let i = 0; i<cursos.length; i++) { %>
                            
                            <li class="list-group-item d-flex align-items-center justify-content-between mb-1 rounded-0">
                                <%= cursos[i].nome %>
                                <div class="d-flex justify-content-end">
                                    <a href="/topicos?idUsuario=<%= usuario[0].idUsuario %>&idCurso=<%= cursos[i].idCurso %>" class="btn btn-primary">Ver T贸picos</a>
                              
